{
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.rulers": [80, 120],
    "editor.tabSize": 2,
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.exclude": {
      "**/.DS_Store": true,
      "**/.git": true,
      ".next/**": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "prettier.printWidth": 80,
    "search.exclude": {}
  }